
{
  "files.insertFinalNewline": true,
  "window.zoomLevel": 1,
  "vim.useCtrlKeys": true,
  "editor.tabSize": 2,
  "editor.fontSize": 11,
  "workbench.activityBar.visible": false,
  // "explorer.openEditors.visible": 0,
  "files.trimTrailingWhitespace": true,
  "workbench.editor.enablePreview": false,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.statusBar.visible": true,
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.fontSize": 11,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.lineHeight": 1.1,
  "vim.neovimPath": "/usr/local/bin/nvim",
  "material-icon-theme.showWelcomeMessage": false,
  "vim.leader": ",",
  "vim.statusBarColorControl": false,
  "editor.cursorStyle": "line",
  "material-icon-theme.showUpdateMessage": false,
  "editor.minimap.enabled": false,
  "editor.autoIndent": true,
  "editor.renderIndentGuides": false,
  "editor.renderWhitespace": "all",
  "search.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/tmp": true,
    "**/coverage": true
  },
  "files.exclude": {
    "**/.git": true,
    "*.swp": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true
  },
  "git.enableSmartCommit": true,
  "files.associations": {
    "*.rake": "ruby",
    ".pryrc": "ruby",
    "*.thor": "ruby",
    "*.jsx": "javascript"
  },
  "extensions.ignoreRecommendations": true,
  "workbench.startupEditor": "none",
  "window.titleBarStyle": "custom",
  "workbench.colorTheme": "One Dark Pro Vivid",
  "workbench.colorCustomizations": {
    "statusBar.background": "#21252b",
    "titleBar.activeBackground": "#21252b",
    "titleBar.inactiveBackground": "#21252b",
    "titleBar.border": "#21252b",
    "statusBar.foreground": "#ccc",
    "panel.border": "#918f8f1c",
    "editorGroup.border": "#6e6e6e2d",
    "scrollbarSlider.background": "#7271712d",
    "editor.background": "#1a1d22",
    "tab.activeBackground": "#1a1d22"
  },
  "gitlens.codeLens.enabled": false,
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
    "suppressResultsExplorerNotice": false,
    "suppressShowKeyBindingsNotice": true,
    "suppressUpdateNotice": true,
    "suppressWelcomeNotice": true
  },
  "explorer.confirmDragAndDrop": false,
  "gitlens.hovers.currentLine.enabled": false,
  "gitlens.keymap": "alternate",
  "ruby.locate": {
    "include": "**/*.rb",
    "exclude": "{**/@(test|spec|tmp|.*),**/@(test|spec|tmp|.*)/**,**/*_spec.rb}"
  },
  // Set the default
  "editor.formatOnSave": false,
  // Enable per-language
  "[javascript]": {
    "editor.formatOnSave": true
  },
  // "[ruby]": {
  //   "editor.formatOnSave": true
  // },
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "vue-html": "html",
    "plaintext": "jade"
  },

  "editor.colorDecorators": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "breadcrumbs.enabled": true,
  "ruby.intellisense": "rubyLocate",
  "gitlens.views.repositories.enabled": false,
  "gitlens.views.fileHistory.enabled": true,
  "gitlens.views.lineHistory.enabled": true,
  "ruby.specCommand": "bin/rspec",
  "diffEditor.renderSideBySide": false,
  "go.autocompleteUnimportedPackages": true,
  "editor.wordWrap": "on",
  "kite.showWelcomeNotificationOnStartup": false,
}
